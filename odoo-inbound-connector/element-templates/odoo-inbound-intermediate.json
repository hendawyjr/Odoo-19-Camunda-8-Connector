            "binding": {
                "name": "triggerCondition",
                "type": "zeebe:input"
            },
            "type": "Dropdown",
            "choices": [
                {
                    "name": "New Records Only",
                    "value": "NEW"
                },
                {
                    "name": "Modified Records Only",
                    "value": "MODIFIED"
                },
                {
                    "name": "New and Modified",
                    "value": "BOTH"
                }
            ]
        },
        {
            "id": "triggerField",
            "label": "Trigger Field",
            "value": "write_date",
            "feel": "optional",
            "group": "polling",
            "binding": {
                "name": "triggerField",
                "type": "zeebe:input"
            },
            "type": "String"
        },
        {
            "id": "filterDomain",
            "label": "Filter Domain",
            "optional": true,
            "feel": "required",
            "group": "polling",
            "binding": {
                "name": "filterDomain",
                "type": "zeebe:input"
            },
            "type": "Text"
        },
        {
            "id": "fields",
            "label": "Fields to Include",
            "optional": true,
            "feel": "optional",
            "group": "polling",
            "binding": {
                "name": "fields",
                "type": "zeebe:input"
            },
            "type": "Text"
        },
        {
            "id": "batchSize",
            "label": "Batch Size",
            "value": "50",
            "feel": "optional",
            "group": "polling",
            "binding": {
                "name": "batchSize",
                "type": "zeebe:input"
            },
            "type": "String"
        },
        {
            "id": "correlationKeyProcess",
            "label": "Correlation Key (Process)",
            "description": "Expression to extract from event (e.g., =odooRecordId)",
            "feel": "required",
            "group": "correlation",
            "binding": {
                "name": "correlationKey.process",
                "type": "zeebe:input"
            },
            "type": "Text"
        },
        {
            "id": "correlationKeyLocal",
            "label": "Correlation Key (Local)",
            "feel": "required",
            "group": "correlation",
            "binding": {
                "name": "correlationKey.local",
                "type": "zeebe:input"
            },
            "type": "Text"
        },
        {
            "id": "resultVariable",
            "label": "Result Variable",
            "group": "output",
            "binding": {
                "key": "resultVariable",
                "type": "zeebe:taskHeader"
            },
            "type": "String"
        },
        {
            "id": "resultExpression",
            "label": "Result Expression",
            "optional": true,
            "feel": "required",
            "group": "output",
            "binding": {
                "key": "resultExpression",
                "type": "zeebe:taskHeader"
            },
            "type": "Text"
        }
    ],
    "icon": {
        "contents": "data:image/svg+xml;base64,"
    }
