{
    "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
    "name": "Odoo Polling (Intermediate)",
    "id": "io.camunda.connector.Odoo.Inbound.Intermediate.Polling.v1",
    "description": "Poll Odoo 19 for new or modified records and trigger process events",
    "documentationRef": "https://www.odoo.com/documentation/19.0/developer/reference/external_api.html",
    "version": 1,
    "category": {
        "id": "connectors",
        "name": "Connectors"
    },
    "appliesTo": [
        "bpmn:IntermediateCatchEvent"
    ],
    "elementType": {
        "value": "bpmn:IntermediateCatchEvent",
        "eventDefinition": "bpmn:MessageEventDefinition"
    },
    "groups": [
        {
            "id": "authentication",
            "label": "Authentication"
        },
        {
            "id": "polling",
            "label": "Polling Configuration"
        },
        {
            "id": "correlation",
            "label": "Correlation"
        },
        {
            "id": "output",
            "label": "Output Mapping"
        }
    ],
    "properties": [
        {
            "value": "io.camunda:odoo-inbound:1",
            "binding": {
                "property": "type",
                "type": "zeebe:taskDefinition"
            },
            "type": "Hidden"
        },
        {
            "id": "url",
            "label": "Odoo URL",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "feel": "optional",
            "group": "authentication",
            "binding": {
                "name": "url",
                "type": "zeebe:input"
            },
            "type": "String"
        },
        {
            "id": "database",
            "label": "Database",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "feel": "optional",
            "group": "authentication",
            "binding": {
                "name": "database",
                "type": "zeebe:input"
            },
            "type": "String"
        },
        {
            "id": "apiKey",
            "label": "API Key",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "feel": "optional",
            "group": "authentication",
            "binding": {
                "name": "apiKey",
                "type": "zeebe:input"
            },
            "type": "String"
        },
        {
            "id": "model",
            "label": "Model",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "feel": "optional",
            "group": "polling",
            "binding": {
                "name": "model",
                "type": "zeebe:input"
            },
            "type": "String"
        },
        {
            "id": "pollingInterval",
            "label": "Polling Interval (seconds)",
            "value": "30",
            "feel": "optional",
            "group": "polling",
            "binding": {
                "name": "pollingInterval",
                "type": "zeebe:input"
            },
            "type": "String"
        },
        {
            "id": "triggerCondition",
            "label": "Trigger Condition",
