{
    "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
    "name": "Odoo Polling (Intermediate)",
    "id": "io.camunda.connector.Odoo.Inbound.Intermediate.Polling",
    "description": "Poll Odoo 19 for new or modified records and trigger process events",
    "documentationRef": "https://www.odoo.com/documentation/19.0/developer/reference/external_api.html",
    "version": 4,
    "category": {
        "id": "connectors",
        "name": "Connectors"
    },
    "appliesTo": [
        "bpmn:IntermediateCatchEvent"
    ],
    "elementType": {
        "value": "bpmn:IntermediateCatchEvent",
        "eventDefinition": "bpmn:MessageEventDefinition"
    },
    "groups": [
        {
            "id": "authentication",
            "label": "Authentication"
        },
        {
            "id": "polling",
            "label": "Polling Configuration"
        },
        {
            "id": "correlation",
            "label": "Correlation"
        },
        {
            "id": "output",
            "label": "Output Mapping"
        }
    ],
    "properties": [
        {
            "type": "Hidden",
            "value": "io.camunda:odoo-inbound-polling:1",
            "binding": {
                "type": "zeebe:property",
                "name": "inbound.type"
            }
        },
        {
            "id": "messageName",
            "label": "Message Name",
            "description": "Unique name for this message (e.g. odoo-polling-partners)",
            "type": "String",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "group": "correlation",
            "binding": {
                "type": "bpmn:Message#property",
                "name": "name"
            }
        },
        {
            "id": "url",
            "label": "Odoo URL",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "feel": "optional",
            "group": "authentication",
            "binding": {
                "type": "zeebe:property",
                "name": "url"
            },
            "type": "String"
        },
        {
            "id": "database",
            "label": "Database",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "feel": "optional",
            "group": "authentication",
            "binding": {
                "type": "zeebe:property",
                "name": "database"
            },
            "type": "String"
        },
        {
            "id": "apiKey",
            "label": "API Key",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "feel": "optional",
            "group": "authentication",
            "binding": {
                "type": "zeebe:property",
                "name": "apiKey"
            },
            "type": "String"
        },
        {
            "id": "model",
            "label": "Model",
            "optional": false,
            "constraints": {
                "notEmpty": true
            },
            "feel": "optional",
            "group": "polling",
            "binding": {
                "type": "zeebe:property",
                "name": "model"
            },
            "type": "String"
        },
        {
            "id": "pollingInterval",
            "label": "Polling Interval (seconds)",
            "value": "30",
            "feel": "optional",
            "group": "polling",
            "binding": {
                "type": "zeebe:property",
                "name": "pollingInterval"
            },
            "type": "String"
        },
        {
            "id": "triggerCondition",
            "label": "Trigger Condition",
            "value": "BOTH",
            "group": "polling",
            "binding": {
                "type": "zeebe:property",
                "name": "triggerCondition"
            },
            "type": "Dropdown",
            "choices": [
                {
                    "name": "New Records Only",
                    "value": "NEW"
                },
                {
                    "name": "Modified Records Only",
                    "value": "MODIFIED"
                },
                {
                    "name": "New and Modified",
                    "value": "BOTH"
                }
            ]
        },
        {
            "id": "triggerField",
            "label": "Trigger Field",
            "value": "write_date",
            "feel": "optional",
            "group": "polling",
            "binding": {
                "type": "zeebe:property",
                "name": "triggerField"
            },
            "type": "String"
        },
        {
            "id": "filterDomain",
            "label": "Filter Domain",
            "optional": true,
            "feel": "required",
            "group": "polling",
            "binding": {
                "type": "zeebe:property",
                "name": "filterDomain"
            },
            "type": "Text"
        },
        {
            "id": "fields",
            "label": "Fields to Include",
            "optional": true,
            "feel": "optional",
            "group": "polling",
            "binding": {
                "type": "zeebe:property",
                "name": "fields"
            },
            "type": "Text"
        },
        {
            "id": "batchSize",
            "label": "Batch Size",
            "value": "50",
            "feel": "optional",
            "group": "polling",
            "binding": {
                "type": "zeebe:property",
                "name": "batchSize"
            },
            "type": "String"
        },
        {
            "id": "correlationKeyProcess",
            "label": "Correlation Key (Process)",
            "description": "Expression to extract from event (e.g., =odooRecordId)",
            "feel": "required",
            "group": "correlation",
            "binding": {
                "type": "bpmn:Message#zeebe:subscription#property",
                "name": "correlationKey"
            },
            "type": "Text"
        },
        {
            "id": "resultVariable",
            "label": "Result Variable",
            "group": "output",
            "binding": {
                "type": "zeebe:property",
                "name": "resultVariable"
            },
            "type": "String"
        },
        {
            "id": "resultExpression",
            "label": "Result Expression",
            "value": "={ \"model\": odooModel, \"recordId\": odooRecordId, \"eventType\": odooEventType, \"timestamp\": odooTimestamp, \"isNew\": odooEventType = \"CREATE\", \"isUpdate\": odooEventType = \"UPDATE\", \"data\": odooRecord }",
            "feel": "required",
            "group": "output",
            "binding": {
                "type": "zeebe:property",
                "name": "resultExpression"
            },
            "type": "Text"
        }
    ],
    "icon": {
        "contents": "data:image/svg+xml;base64,"
    }
}